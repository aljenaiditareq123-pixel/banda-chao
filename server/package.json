{
  "name": "banda-chao-server",
  "version": "1.0.0",
  "private": true,
  "_comment": "Trigger rebuild after GCS setup",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prebuild": "npx prisma generate",
    "build": "tsc -p tsconfig.json",
    "postbuild": "echo 'üîß Running Prisma migrations...' && (npx prisma migrate deploy --schema=./prisma/schema.prisma 2>&1 || (echo '‚ö†Ô∏è Migration deploy failed, trying db push...' && npx prisma db push --schema=./prisma/schema.prisma --accept-data-loss 2>&1 || echo '‚ö†Ô∏è Database migration/push failed, but continuing build...')) || true",
    "start": "node dist/index.js",
    "db:migrate": "npx prisma migrate dev --name phase3_stability",
    "db:generate": "npx prisma generate",
    "migrate:deploy": "npx prisma migrate deploy --schema=./prisma/schema.prisma",
    "db:push": "npx prisma db push --schema=./prisma/schema.prisma --accept-data-loss",
    "db:seed": "tsx prisma/seed.ts",
    "db:quick-seed": "tsx scripts/quick-seed.ts",
    "db:seed-render": "cd /opt/render/project/src/server && npm run db:quick-seed",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.7.0",
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.9.0",
    "@sentry/node": "^7.91.0",
    "@sentry/profiling-node": "^1.0.0",
    "axios": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "prisma": "^5.9.0",
    "socket.io": "^4.6.0",
    "stripe": "^14.10.0",
    "zod": "^3.22.4",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "supertest": "^6.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.2.0"
  }
}
